#!/usr/bin/python3
import json
import subprocess

images = list()
subprocess = subprocess.Popen("luna osimage list | tail -n +4 | head -n -1 | awk '{ print $2 }'", shell=True, stdout=subprocess.PIPE)
subprocess_return = subprocess.stdout.read()
for line in subprocess_return.decode("utf-8").split("\n"):
  if line!="":
    images.append(line)

output={}
output['_meta']={}
output['_meta']['hostvars']={}
output['osimages.luna']={}
output['osimages.luna']['hosts']=[]
for image in images:
  output['_meta']['hostvars'][image+'.osimages.luna']={}
  output['_meta']['hostvars'][image+'.osimages.luna']['ansible_connection']="lchroot"
  output['_meta']['hostvars'][image+'.osimages.luna']['ansible_host']=image
  output['osimages.luna']['hosts'].append(image+'.osimages.luna')

print(json.dumps(output, indent=4, sort_keys=True))
